{
    "name": "foodlz/laravel-translation-manager",
    "description": "Enhanced Laravel Translation Manager",
    "keywords": [
        "laravel",
        "translations",
        "translator"
    ],
    "homepage": "https://github.com/foodlz/laravel-translation-manager",
    "license": "MIT",
    "authors": [
        {
            "name": "Vladimir Schneider",
            "email": "vladimir.schneider@gmail.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.0",
        
        "laravelcollective/html": "^5.0|^6.0|^7.0|^8.0|^9.0",
        "illuminate/translation": "^6.0|^7.0|^8.0|^9.0",
        "doctrine/dbal": "^2|^3|^4",
        "symfony/finder": "^4|^5|^6"
    },
    "require-dev": {
        "phpspec/phpspec": "^6|^7",
        "fzaninotto/faker": "^1.9.1",
        "mockery/mockery": "^1.4.4",
        "phpunit/phpunit": "^9.5.10"
    },
    "autoload": {
        "classmap": [
            "src/Classes"
        ],
        "files": [
            "src/Support/helpers.php"
        ],
        "psr-4": {
            "Vsch\\TranslationManager\\": "src/"
        }
    },
    "autoload-dev": {
        "classmap": [
            "tests/"
        ],
        "psr-4": {
        }
    },
    "scripts": {
        "post-update-cmd": [
        ]
    },
    "minimum-stability": "stable"
}
